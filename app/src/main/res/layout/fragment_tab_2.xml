<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	tools:context=".controller.UnidadeActivity"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="25dp"
	android:onClick="showSetor">

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		android:text="Secretaria do BTI"/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Sala B115, térreo"/>
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginVertical="15dp"
		android:background="@android:color/darker_gray"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		android:text="Coordenação de Curso"/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Sala B114, térreo"/>
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginVertical="15dp"
		android:background="@android:color/darker_gray"/>

	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		android:text="DTI"/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="Sala B113, térreo"/>
	<View
		android:layout_width="match_parent"
		android:layout_height="1dp"
		android:layout_marginVertical="15dp"
		android:background="@android:color/darker_gray"/>

</LinearLayout>